#include<stdio.h>
int main()
{
	   int num, sum = 0, c;
    
    printf("Enter the term number to calculate sum : ");
    scanf("%i", &num);
    printf("The first %d natural numbers are :\n",num);
    
    for (c=1; c<=num; c++)
    {
        printf("%d\t",c);
        sum += c ;
    }
    
    printf("\nThe sum till the %dth term is : %d ", num, sum);
    return 0;
