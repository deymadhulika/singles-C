#include <stdio.h>
    
    int main()
    {
        float c, f ;
        
        printf("Enter temperature in Celsius : ");
        scanf("%f", &c);
        
        f = ((9*c)/5)+32 ;
        
        printf("The temperature in Fahrenheit is %f",f);
        
        printf("\n Enter temperature in Fahrenheit : ");
        scanf("%f", &f);
        
        c = 5*(f-32)/9 ;
        
        printf("The temperature in Celsius is %f",c);
    
        return 0;
    }
