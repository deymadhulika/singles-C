#include <stdio.h>

int main()
{
   int p, i, y;
   float r, si;
    i =1 ; 
    while(i<=3)
    {
        printf("\nEnter the value of p, y and r : ");
        scanf("%d %d %f",&p, &y, &r);
        
        si = p*r*y/100 ;
        
        printf("\nSimple interest is : %f",si);
        
        i=i+1 ;
    }
    return 0;
}
